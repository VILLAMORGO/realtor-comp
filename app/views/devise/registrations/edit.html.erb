<div class="d-flex justify-content-center">
  <div class="card col-sm-6 mt-5 mb-5 border border-dark mx-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'card-body mt-3 px-4' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h5 class="card-title text-center mt-2 mb-4">Update Account</h5>
      
      <div class="form-row">
        <h6 class="card-title text-left mt-2 mb-2">Personal Information:</h6>
        <div class="row">
          <div class="col-md-6 mb-2">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
          </div>
          <div class="col-md-6 mb-2">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
          </div>
        </div>
        
        <div class="form-group mb-2">
          <%= f.label :mls_number, "MLS Number" %>
          <%= f.number_field :mls_number, class: "form-control", placeholder: "Enter your MLS number here..." %>
        </div>

        <br>
        <h6 class="card-title text-left mt-2 mb-2">Address:</h6>
        
        <div class="form-group mb-2">
          <%= f.label :street_address %>
          <%= f.text_field :street_address, class: "form-control", placeholder: "1234 Main St" %>
        </div>
        <div class="form-group mb-2">
          <%= f.label :home_address %>
          <%= f.text_field :home_address, class: "form-control", placeholder: "Apartment, studio, or floor" %>
        </div>
        <div class="row">
          <div class="form-group col-md-6 mb-2">
            <%= f.label :city_address %>
            <%= f.text_field :city_address, class: "form-control", placeholder: "City" %>
          </div>
          <div class="form-group col-md-4 mb-2">
            <%= f.label :state %>
            <%= f.select :state, options_for_select(us_states, @user.state), {}, class: "form-control" %>
          </div>
          <div class="form-group col-md-2 mb-2">
            <%= f.label :zip_code %>
            <%= f.number_field :zip_code, class: "form-control", placeholder: "Zip Code" %>
          </div>
        </div>

        <br>
        <h6 class="card-title text-left mt-2 mb-2">Authentication:</h6>
        
        <div class="form-group mb-2">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="form-group mb-2">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        <div class="row">
          <div class="form-group col-md-6 mb-2">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="form-group col-md-6 mb-2">
            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>
      </div>
      <div class="form-group mb-2">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= f.submit "Update Account", class: "btn btn-primary text-center mt-2 col-md-6" %>
      </div>
    <% end %>
    
    <h5 class="card-title text-center mt-2 mb-3">Cancel my account</h5>

    <div class="text-center mt-2 mb-3">
      <i>Unhappy?</i><br />
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-light border border-dark' %>
    </div>

    <div class="text-center">
      <%= link_to "Back", home_path, class: 'text-center', style: 'text-decoration: none;' %>
    </div>
  </div>
</div>