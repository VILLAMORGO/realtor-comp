<div class="d-flex justify-content-center">
  <div class="card col-sm-12 col-md-10 col-lg-8 mt-5 mb-5 border border-dark mx-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'card-body mt-3 px-4' }) do |f| %>
      <h5 class="card-title text-center mt-2 mb-4">Create Account</h5>
      
      <div class="form-row">
        <h6 class="card-title text-left mt-2 mb-2">Personal Information:</h6>
        <div class="row">
          <div class="col-md-6 mb-2">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
          </div>
          <div class="col-md-6 mb-2">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
          </div>
        </div>
       
        <div class="form-group mb-2">
          <%= f.label :mls_number, "MLS Number" %>
          <%= f.number_field :mls_number, class: "form-control", placeholder: "Enter your MLS number here..." %>
        </div>

        <br>
        <h6 class="card-title text-left mt-2 mb-2">Address:</h6>
    
        <div class="form-group mb-2">
          <%= f.label :street_address %>
          <%= f.text_field :street_address, class: "form-control", placeholder: "1234 Main St" %>
        </div>
        <div class="form-group mb-2">
          <%= f.label :home_address %>
          <%= f.text_field :home_address, class: "form-control", placeholder: "Apartment, studio, or floor" %>
        </div>
        <div class="row">
          <div class="form-group col-md-6 mb-2">
            <%= f.label :city_address %>
            <%= f.text_field :city_address, class: "form-control", placeholder: "City" %>
          </div>
          <div class="form-group col-md-4 mb-2">
            <%= f.label :state %>
            <%= f.select :state, options_for_select(us_states, @user.state), {}, class: "form-control" %>
          </div>
          <div class="form-group col-md-2 mb-2">
            <%= f.label :zip_code %>
            <%= f.number_field :zip_code, class: "form-control", placeholder: "Zip Code" %>
          </div>
        </div>

        <br>
        <h6 class="card-title text-left mt-2 mb-2">Authentication:</h6>

        <div class="form-group mb-2">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="row">
          <div class="form-group col-md-6 mb-2">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group col-md-6 mb-2">
            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= f.submit "Create Account", class: "btn btn-primary text-center mt-2 col-md-6" %>
      </div>
    <% end %>
    <div class="d-flex justify-content-center flex-column mb-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>