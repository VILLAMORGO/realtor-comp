
<div class="text-center">
  <% if controller_name != 'sessions' %>
    <%= link_to "Already have an account?", new_session_path(resource_name), style: "text-decoration: none; color: grey;" %><br />
  <% end %>
</div>

<div class="text-start fs-6 tracking-wide">
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    Don't have an account yet? 
    <%= link_to "Sign up", new_registration_path(resource_name), class: "fw-bold",  style: "text-decoration: none; color: grey;" %><br />
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), style: "text-decoration: none; color: grey;" %><br />
  <% end %>
</div>

<div class="text-start fs-6 tracking-wide d-flex flex-column">
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    Didn't receive confirmation instructions?
    <%= link_to "Resend Confirmation", new_user_confirmation_path(resource_name), class: "fw-bold",  style: "text-decoration: none; color: grey;" %><br />
  <% end %>
</div>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>