<div class="d-flex justify-content-center">
  <div class="card col-sm-6 mt-5 mb-5 border border-dark mx-1">
    <div class="card-body mt-3 px-4">
      <h5 class="card-title text-center mt-2 mb-4">Bulk Upload Users</h5>

      <div class="d-flex justify-content-center mt-4">
        <%= link_to "Export CSV Template", admin_bulk_uploads_path(format: :csv), class: "btn btn-secondary text-center mt-2 col-md-6" %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="card col-sm-6 mt-5 mb-5 border border-dark mx-1">
    <%= form_with url: admin_bulk_uploads_path, local: true, multipart: true do |form| %>
      <div class='card-body mt-3 px-4'>
        <h5 class="card-title text-center mt-2 mb-4">Upload CSV File</h5>

        <div class="form-row">
          <div class="form-group mb-2">
            <%= form.label :file, "Choose CSV File" %>
            <%= form.file_field :file, class: "form-control" %>
          </div>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= form.submit "Upload", class: "btn btn-primary text-center mt-2 col-md-6" %>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-center mb-5">
      <%= link_to "Back to Users", users_path, class: "btn btn-primary text-center mt-2 col-md-6" %>
    </div>
  </div>
</div>